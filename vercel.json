{
  "buildCommand": "npm install && npm --workspace server install && npm --workspace client install && npm --workspace client run build",
  "devCommand": "npm run dev",
  "env": {
    "MONGODB_URI": "@mongodb_uri",
    "JWT_SECRET": "@jwt_secret",
    "PORT": "5000",
    "NODE_ENV": "production"
  },
  "public": false,
  "functions": {
    "server/src/index.js": {
      "memory": 512,
      "maxDuration": 60
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/src/index.js",
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH"]
    },
    {
      "src": "/(.*)",
      "dest": "client/dist/$1"
    }
  ]
}
